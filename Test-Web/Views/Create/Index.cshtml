@model Test_Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Creating product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Create" asp-action="index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control border-2 border-dark mb-lg-3" />
                <span asp-validation-for="Name" class="text-danger mb-lg-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control border-2 border-dark mb-lg-3" />
                <span asp-validation-for="Amount" class="text-danger mb-lg-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control border-2 border-dark mb-lg-3" />
                <span asp-validation-for="Type" class="text-danger mb-lg-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control border-2 border-dark mb-lg-3" />
                <span asp-validation-for="Description" class="text-danger mt-lg-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control border-2 border-dark mb-lg-3" />
                <span asp-validation-for="Price" class="text-danger mt-lg-3"></span>
            </div>
            <div class="form-group">
                <input asp-controller="Create" asp-action="Create" type="submit" value="Create" class="btn btn-primary mt-lg-4" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
